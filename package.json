{
  "name": "bitcoin-wallet",
  "version": "0.1.0",
  "description": "A self-custody Bitcoin wallet implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:coverage": "jest --coverage",
    "build:watch": "tsc -w",
    "example": "ts-node examples/basic-wallet.ts"
  },
  "dependencies": {
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "ecpair": "^2.1.0",
    "tiny-secp256k1": "^2.2.3"
  },
  "devDependencies": {
    "@types/bip32": "^1.0.2",
    "@types/bip39": "^2.4.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/bitcoin-wallet.git"
  },
  "keywords": [
    "bitcoin",
    "wallet",
    "cryptocurrency",
    "blockchain"
  ],
  "author": "",
  "license": "MIT"
}
